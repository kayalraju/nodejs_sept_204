<!doctype html>
<html lang="en">
  <%-include('common/head')%>
  <body>
    <%-include('common/navbar')%>

      
    <div class="container">
      <h1>All Product</h1>
      <a href="/addproduct" class="btn btn-primary"> Add Product</a>
      <table class="table mt-2">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">name</th>
            <th scope="col">price</th>
            <th scope="col">size</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let item of products){ %>
          <tr>
            <th scope="row">1</th>
            <td><%= item.name%></td>
            <td><%= item.price%></td>
            <td><%= item.size%></td>
            <td>  <a href="/edit/<%=item._id%>" class="btn btn-info"> Edit</a></td>
            <td>  <a href="/delete/<%=item._id%>" class="btn btn-danger"> Delete</a></td>
            
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>

      <%-include('common/footer')%>